#!/bin/sh
### BEGIN INIT INFO
# Provides:          !!project!!
# Required-Start:    $remote_fs $syslog
# Required-Stop:     $remote_fs $syslog
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Intercom (VoIP)
# Description:       provide intercomstation to the doorstation by VoIP
### END INIT INFO

. /lib/lsb/init-functions

NAME="!!project!!"
DESC="Intercom (VoIP)"
STARTUP="!!prefix!!/bin/doorpi"
STARTUP_ARGS="--configfile !!cfgfile!! --logfile !!logfile!!"
PIDFILE="/run/doorpi/doorpi.pid"

# Exit if the package is not installed
if [ none != "$STARTUP" ] && [ ! -x "$STARTUP" ] ; then
  exit 3
fi

# Read configuration variable file if it is present
[ -r /etc/default/$NAME ] && . /etc/default/$NAME

# Load the VERBOSE setting and other rcS variables
. /lib/init/vars.sh
if [ -t 0 ]; then # Be verbose when called from a terminal
  VERBOSE=yes
fi

do_start_cmd() {
  status_of_proc "$STARTUP" "$NAME" > /dev/null && return 1
  $STARTUP start $STARTUP_ARGS || return 2
}

do_test_cmd() {
  status_of_proc "$STARTUP" "$NAME" > /dev/null && return 1
  $STARTUP start $STARTUP_ARGS --test || return 2
}

is_doorpi_running() {
  status_of_proc "$STARTUP" "$NAME" > /dev/null && return 0
  return 1
}

do_stop_cmd() {
  status_of_proc "$STARTUP" "$NAME" > /dev/null || return 1
  $STARTUP stop || return 2
  rm -f $PIDFILE
  return 0
}

EX=0
case "$1" in
  start)
    if [ "$VERBOSE" != no ]; then log_daemon_msg "Starting $DESC" "$NAME"; fi
    do_start_cmd
    case "$?" in
      0|1) if [ "$VERBOSE" != no ]; then log_end_msg 0; fi ;;
      2)
        if [ "$VERBOSE" != no ]; then log_end_msg 1; fi
        EX=1 ;;
    esac
    ;;
  stop)
    if [ "$VERBOSE" != no ]; then log_daemon_msg "Stopping $DESC" "$NAME"; fi
    do_stop_cmd
    case "$?" in
      0|1) if [ "$VERBOSE" != no ]; then log_end_msg 0; fi ;;
      2)
        if [ "$VERBOSE" != no ]; then log_end_msg 1; fi
        EX=1 ;;
    esac
    ;;
  restart)
    if [ "$VERBOSE" != no ]; then log_daemon_msg "Restarting $DESC" "$NAME"; fi
    do_stop_cmd
    # issue #132
    echo "waiting until !!package!! is stopped"
    sleep 3
    while ! is_doorpi_running; do
      echo "!!package!! is still running - wait one more second"
      sleep 1
    done
    sleep 2
    do_start_cmd
    case "$?" in
      0|1) if [ "$VERBOSE" != no ]; then log_end_msg 0; fi ;;
      2)
        if [ "$VERBOSE" != no ]; then log_end_msg 1; fi
        EX=1 ;;
    esac
    ;;
  status)
    status_of_proc "$STARTUP" "$NAME"
    EX=$?
    ;;
  *)
    echo "Usage: $0 {start|stop|status|restart}" >&2
    EX=3
    ;;
esac

exit $EX
