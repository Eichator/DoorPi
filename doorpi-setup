    fi
    sudo systemctl is-enabled --quiet smbd 2>/dev/null || sudo systemctl enable smbd > "$out" 2>&1
    sudo systemctl is-enabled --quiet nsmbd 2>/dev/null || sudo systemctl enable nmbd > "$out" 2>&1
    set +e
