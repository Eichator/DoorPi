    if os_is_like debian || os_is debian || os_is_like ubuntu || os_is ubuntu || os_is linuxmint; then
        # Debian / Ubuntu / Mint
        PACKAGE_LIST=(samba samba-common smbclient)
        INST_CMD="sudo apt-get install -y"
