        echo "and send a PR with the libraries found on your system"
        echo ""
        echo "Will exit"
        sleep 3
        exit
    fi

    set -e
    echo "... checking dependencies"
    if [[ -z $VERBOSE ]]; then
        for pkg in "${PACKAGE_LIST[@]}"
        do
            if ! containsElement "$pkg" "${PKG_INSTALLED[@]}"; then
                echo "... installing ${pkg}"
